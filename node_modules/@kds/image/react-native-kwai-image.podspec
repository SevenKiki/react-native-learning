  s.name         = "react-native-kwai-image"
  s.version      = package["version"]
  s.summary      = "a react native image for kwai image"
  s.homepage     = "https://git.corp.kuaishou.com/kds/custom-component/react-native-kwai-image#readme"
  s.license      = "MIT"
  s.authors      = "jiaozhiyu <jiaozhiyu@kuaishou.com> (https://git.corp.kuaishou.com/kds/custom-component/react-native-kwai-image)"

  s.platforms    = { :ios => "9.0" }
  s.source       = { :git => "git@git.corp.kuaishou.com:kds/custom-component/react-native-kwai-image.git", :tag => "#{s.version}" }
  
  s.source_files = "ios/**/*.{h,m,mm}"
  

  s.dependency "React"
