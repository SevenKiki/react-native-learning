{
  "name": "@kds/bridge-lite",
  "version": "1.0.2",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "krn-library-template.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "start": "yarn --cwd example start",
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "yarn update-version && bob build",
    "update-version": "node scripts/update-version.js",
    "example": "yarn --cwd example",
    "postversion": "yarn update-version"
  },
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.corp.kuaishou.com"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@kds/eslint-config-react": "^0.2.5",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "16.9.56",
    "@types/react-native": "0.62.2",
    "@kds/bridge-lite-types": "^1.0.97",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "metro-react-native-babel-preset": "0.59.0",
    "prettier": "^2.0.5",
    "react": "16.11.0",
    "react-native": "0.62.2-ks.6",
    "react-native-builder-bob": "^0.18.2",
    "typescript": "^4.1.3"
  },
  "resolutions": {
    "@react-native-community/cli": "~4.13.1",
    "@react-native-community/cli-tools": "4.13.0",
    "@types/react": "16.9.56"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://git.corp.kuaishou.com/kds/sdk/kds-bridge-js-sdk"
  }
}
