LOCAL_PATH := $(call my-dir)

include $(CLEAR_VARS)

REACT_NATIVE := $(LOCAL_PATH)/../../../../../../../..

LOCAL_MODULE := kwai-v8-runtime

LOCAL_SRC_FILES := $(wildcard $(LOCAL_PATH)/*.cpp) $(wildcard $(LOCAL_PATH)/codecache/*.cpp) $(wildcard $(LOCAL_PATH)/base/*.cpp)

LOCAL_C_INCLUDES := $(LOCAL_PATH) $(REACT_NATIVE)/ReactCommon/jsi $(REACT_NATIVE)/ReactCommon/ $(REACT_NATIVE)/node_modules/kwai-v8/include
LOCAL_EXPORT_C_INCLUDES := $(LOCAL_PATH)

LOCAL_CFLAGS := -fexceptions -frtti
ifeq ($(TARGET_ARCH_ABI),arm64-v8a)
  LOCAL_CFLAGS += -DV8_COMPRESS_POINTERS
else ifeq ($(TARGET_ARCH_ABI),x86_64)
  LOCAL_CFLAGS += -DV8_COMPRESS_POINTERS
endif
ifeq ($(APP_OPTIM),release)
  LOCAL_CFLAGS += -O3
endif

LOCAL_SHARED_LIBRARIES := libfolly_json libkwai-v8 glog

include $(BUILD_STATIC_LIBRARY)


