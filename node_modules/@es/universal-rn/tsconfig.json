{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "esnext"
      ],
      "moduleResolution": "node",
      "allowJs": true,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      },
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "declaration": false,
      "strictNullChecks": true
    },
    "include": [
      "src/",
    ],
    "exclude": [
      "node_modules",
      "lib",
      "build",
      "**/*.test.ts",
      "**/*.test.js",
    ]
  }